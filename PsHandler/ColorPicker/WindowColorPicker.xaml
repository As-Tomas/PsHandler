<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PsHandler.ColorPicker"
        xmlns:ui="clr-namespace:PsHandler.UI"
        x:Class="PsHandler.ColorPicker.WindowColorPicker"
        Title="Color Picker" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" Background="WhiteSmoke" Icon="../Images/PsHandler.ico">
    <Grid>
        <local:UcColorPicker HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="UcColorPicker_Main"/>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,311,0,10" Width="372">
            <ui:ButtonImage HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,105,0" Height="22" Width="100" ImageVisible="True" ImageSource="../Images/Resources/Size16x16/accept.png" Text="OK" HorizontalContentAlignment="Center" x:Name="Button_OK" Click="Button_OK_Click"/>
            <ui:ButtonImage HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,0" Height="22" Width="100" ImageVisible="True" ImageSource="../Images/Resources/Size16x16/cancel.png" Text="Cancel" HorizontalContentAlignment="Center" x:Name="Button_Close" Click="Button_Close_Click"/>
        </Grid>
    </Grid>
</Window>
