<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UI="clr-namespace:PsHandler.UI" xmlns:local="clr-namespace:PsHandler.TableTiler" x:Class="PsHandler.TableTiler.WindowTableTileEdit"
        Title="Table Tile Config Edit" Height="600" Width="800"  MinHeight="400" MinWidth="800" Background="#FFF0F0F0" Icon="../Images/ps.ico" UseLayoutRounding="True"  >
    <Grid>
        <Grid Margin="10,10,10,0" Height="27" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2" Padding="0" x:Name="Label_Name" Content="Name:" />
            <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2" x:Name="TextBox_Name" TextWrapping="Wrap" Text="" />
            <Label Grid.Row="0" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2" Padding="0"  x:Name="Label_Name_Copy" Content="Hotkey:" />
            <UI:TextBoxHotkey Grid.Row="0" Grid.Column="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2" x:Name="TextBoxHotkey_Hotkey" TextWrapping="Wrap" />
            <CheckBox Grid.Row="0" Grid.Column="6" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2"  Content="Sort by Starting Time" x:Name="CheckBox_SortByStartingTime" />
        </Grid>
        <Border VerticalAlignment="Top" Margin="10,42,10,0" Height="150" BorderThickness="1" BorderBrush="LightGray" Padding="10">
            <local:UCScreenPreview x:Name="UCScreenPreview_Main" />
        </Border>
        <Grid Margin="10,197,10,41">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="150*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Margin="2" Content="Title Include ALL Words" VerticalAlignment="Center" ToolTip="PokerStars table window title must contains all of these words" />
            <Label Grid.Row="0" Grid.Column="1" Margin="2" Content="Title Include ANY Word" VerticalAlignment="Center" ToolTip="PokerStars table window title must contains any of these words" />
            <Label Grid.Row="0" Grid.Column="2" Margin="2" Content="Title Exclude ALL Words" VerticalAlignment="Center" ToolTip="PokerStars table window title must not contain all of these words" />
            <Label Grid.Row="0" Grid.Column="3" Margin="2" Content="Title Exclude ANY Word" VerticalAlignment="Center" ToolTip="PokerStars table window title must not contain any of these words" />
            <Label Grid.Row="0" Grid.Column="4" Margin="2" Content="X, Y, Width, Height" VerticalAlignment="Center" ToolTip="HandHistory file name must contains any of these words" x:Name="Label_XYWHs" />
            <TextBox x:Name="TextBox_IncludeAnd" Grid.Row="1" Grid.Column="0" Margin="2" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Text=""/>
            <TextBox x:Name="TextBox_IncludeOr" Grid.Row="1" Grid.Column="1" Margin="2" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Text=""/>
            <TextBox x:Name="TextBox_ExcludeAnd" Grid.Row="1" Grid.Column="2" Margin="2" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Text=""/>
            <TextBox x:Name="TextBox_ExcludeOr" Grid.Row="1" Grid.Column="3" Margin="2" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Text=""/>
            <TextBox x:Name="TextBox_XYWH" Grid.Row="1" Grid.Column="4" Margin="2" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Text="" FontFamily="Consolas" FontSize="11"/>
        </Grid>
        <Button Margin="0,0,115,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="130" x:Name="Button_SaveAndClose" Click="Button_SaveAndClose_Click">
            <StackPanel Orientation="Horizontal" Margin="2">
                <Image Height="16" Width="16" Source="../Images/accept.png" />
                <TextBlock Text="Save And Close" Margin="5,0,0,0" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
        <Button Margin="0,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" x:Name="Button_Close" Click="Button_Close_Click">
            <StackPanel Orientation="Horizontal" Margin="2">
                <Image Height="16" Width="16" Source="../Images/cancel.png" />
                <TextBlock Text="Cancel" Margin="5,0,0,0" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
    </Grid>
</Window>
