<Window x:Class="PsHandler.Randomizer.WindowRandomizer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:PsHandler.UI"
        SizeToContent="WidthAndHeight" ShowInTaskbar="False" WindowStyle="None" ResizeMode="NoResize" Focusable="False" ui:GlassEffect.IsEnabled="true" Background="Transparent" Topmost="True" UseLayoutRounding="True">
    <StackPanel Orientation="Vertical">
        <Grid Width="100" Height="16" x:Name="Grid_Info" >
        </Grid>
        <StackPanel Orientation="Horizontal">
            <Border BorderThickness="2" CornerRadius="3" BorderBrush="#FF00DD00" Background="#FF00FF00" Width="50" Height="8" Opacity="1" x:Name="Border_Yes" />
            <Border BorderThickness="2" CornerRadius="3" BorderBrush="#FFDD0000" Background="#FFFF0000" Width="50" Height="8" Opacity="1" x:Name="Border_No" />
        </StackPanel>
    </StackPanel>
</Window>
