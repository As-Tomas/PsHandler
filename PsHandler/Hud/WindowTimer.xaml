<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PsHandler.Hud" 
        xmlns:ui="clr-namespace:PsHandler.UI"
        x:Class="PsHandler.Hud.WindowTimer"
        Title="WindowTimer" SizeToContent="WidthAndHeight"
        ShowInTaskbar="False" WindowStyle="None" 
        ResizeMode="NoResize" Height="16" Focusable="False"
        MouseDown="WindowMouseDown" LocationChanged="WindowLocationChanged" MouseUp="WindowMouseUp"
        PreviewMouseRightButtonDown="Window_PreviewMouseRightButtonDown" PreviewMouseMove="Window_PreviewMouseMove" 
        ui:GlassEffect.IsEnabled="true" Background="Transparent">
    <Grid x:Name="StackPanelMain">
        <local:Timer x:Name="Timer_Main"/>
    </Grid>
</Window>
