<Window x:Class="PsHandler.Hud.WindowTimer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowTimer" SizeToContent="WidthAndHeight"
        ShowInTaskbar="False" WindowStyle="None" 
        ResizeMode="NoResize" Height="16">
    <Grid x:Name="StackPanelMain" Background="Black">
        <Label x:Name="LabelTimer" Content="--:--" Foreground="White" Padding="2" FontWeight="Bold" FontSize="10" FontFamily="Consolas" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
