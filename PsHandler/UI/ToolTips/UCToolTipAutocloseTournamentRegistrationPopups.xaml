<UserControl x:Class="PsHandler.UI.ToolTips.UCToolTipAutocloseTournamentRegistrationPopups"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" UseLayoutRounding="True">
    <Grid Margin="5">
        <StackPanel VerticalAlignment="Center">
            <Label VerticalContentAlignment="Center" Padding="2" Content="Autoclose Tournament Registration Popups. (This might not work properly on WindowsXP)" />
            <Label VerticalContentAlignment="Center" Padding="2" Content="Warning: Be careful, you can accidentally register into unwanted tournaments." />
            <Image Margin="10" Width="300" Height="184" Source="../../Images/ToolTips/tournamentregistrationpopups.png" />
        </StackPanel>
    </Grid>
</UserControl>
