<UserControl x:Class="PsHandler.UI.UCImportFolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid Margin="27,1,1,1"  HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26"/>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="26"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="16" Source="../Images/Size16x16/folder.png" />
        <TextBox Grid.Column="1" Height="23" VerticalAlignment="Center" VerticalContentAlignment="Center" x:Name="TextBox_Path" AcceptsReturn="False" TextWrapping="NoWrap" Text="" />
        <Button Grid.Column="2" Margin="0" Width="22" Height="22" x:Name="Button_Remove" ToolTip="Remove" VerticalAlignment="Center" VerticalContentAlignment="Center" Click="Button_Remove_Click">
            <StackPanel Orientation="Horizontal" Margin="0">
                <Image Height="16" Width="16" Source="../Images/Size16x16/folder_delete.png" />
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
