<Window x:Class="PsHandler.UI.WindowManageImportFolders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:PsHandler.UI"
        Title="Manage Import Folders" MinWidth="400" MinHeight="200" Width="600" Height="200" Background="#FFF0F0F0" Icon="../Images/PsHandler.ico" UseLayoutRounding="True">
    <Grid>
        <ui:ButtonImage HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,115,10" Height="22" Width="100" ImageVisible="True" ImageSource="../Images/Resources/Size16x16/accept.png" Text="OK" HorizontalContentAlignment="Center" x:Name="Button_OK" Click="Button_OK_Click"/>
        <ui:ButtonImage HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Height="22" Width="100" ImageVisible="True" ImageSource="../Images/Resources/Size16x16/cancel.png" Text="Cancel" HorizontalContentAlignment="Center" x:Name="Button_Close" Click="Button_Close_Click"/>

        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Height="22" Padding="0" Margin="10,10,0,0" VerticalContentAlignment="Center" Content="Import folder paths (one per line):" />
        <TextBox Margin="10,37" AcceptsReturn="True" TextWrapping="NoWrap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Text="" x:Name="TextBox_ImportFolders" />
    </Grid>
</Window>
