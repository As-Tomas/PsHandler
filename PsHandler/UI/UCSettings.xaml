<UserControl x:Class="PsHandler.UI.UCSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:PsHandler.UI"
             mc:Ignorable="d" d:DesignHeight="400" d:DesignWidth="600" UseLayoutRounding="True">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="16" Source="../Images/information.png" ToolTipService.ShowDuration="60000" x:Name="Image_AppDataPath" />
        <Image Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="16" Source="../Images/information.png" ToolTipService.ShowDuration="60000" x:Name="Image_PokerStarsThemeTable" />
        <Separator Grid.Column="0" Grid.Row="2"></Separator>
        <Image Grid.Column="0" Grid.Row="7" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="16" Source="../Images/information.png" ToolTipService.ShowDuration="60000" x:Name="Image_ExitHotkey" />

        <Label Grid.Column="1" Grid.Row="0" Content="PokerStars AppData Folder Path:" />
        <Label Grid.Column="1" Grid.Row="1" Content="PokerStars Table Theme:" />
        <Separator Grid.Column="1" Grid.Row="2"></Separator>
        <CheckBox Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0" Content="Minimize to System Tray" x:Name="CheckBox_MinimizeToSystemTray" />
        <CheckBox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0" Content="Start Minimized" x:Name="CheckBox_StartMinimized" />
        <CheckBox Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0" Content="Save GUI Location" x:Name="CheckBox_SaveGuiLocation" />
        <CheckBox Grid.Column="1" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0" Content="Save GUI Size" x:Name="CheckBox_SaveGuiSize" />
        <Label Grid.Column="1" Grid.Row="7" Content="Exit Hotkey:" />

        <TextBox Grid.Column="2" Grid.Row="0" Margin="2" x:Name="TextBox_PokerStarsAppDataFolderPath" />
        <ComboBox Grid.Column="2" Grid.Row="1" Margin="2" x:Name="ComboBox_PokerStarsThemeTable" />
        <Separator Grid.Column="2" Grid.Row="2"></Separator>
        <ui:TextBoxHotkey Grid.Column="2" Grid.Row="7" Margin="2" x:Name="TextBoxHotkey_Exit" />

        <Separator Grid.Column="3" Grid.Row="2"></Separator>

    </Grid>
</UserControl>
