<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:PsHandler.UI"
        x:Class="PsHandler.UI.WindowGNUGeneralPublicLicense"
        Title="The GNU General Public License v3.0" Background="#FFF0F0F0" 
        Height="600" Width="800" MinHeight="240" MinWidth="640"
        Icon="../Images/PsHandler.ico" UseLayoutRounding="True">
    <Grid>
        <Border BorderThickness="1" BorderBrush="LightGray" Margin="10,10,10,37">
            <WebBrowser x:Name="WebBrowser_Main" />
        </Border>

        <ui:ButtonImage HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,115,10" Height="22" Width="100" ImageVisible="True" ImageSource="../Images/Resources/Size16x16/accept.png" Text="I Agree" HorizontalContentAlignment="Center" x:Name="Button_IAgree" Click="Button_IAgree_Click"/>
        <ui:ButtonImage HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Height="22" Width="100" ImageVisible="True" ImageSource="../Images/Resources/Size16x16/cancel.png" Text="Cancel" HorizontalContentAlignment="Center" x:Name="Button_Cancel" Click="Button_Cancel_Click"/>

        <Label Padding="0" VerticalContentAlignment="Center" Content="Do you agree to use PsHandler under this license? " HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Height="22" Width="270"/>
    </Grid>
</Window>
