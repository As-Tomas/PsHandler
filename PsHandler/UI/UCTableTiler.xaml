<UserControl x:Class="PsHandler.UI.UCTableTiler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" UseLayoutRounding="True" >
    <Grid>
        <ListView x:Name="ListView_TableTiles" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="10,10,145,10" MouseDoubleClick="ListView_TableTilerConfigs_OnMouseDoubleClick" >
            <ListView.View>
                <GridView x:Name="GridView_TableTiles">
                    <GridViewColumn Width="Auto" Header="Name">
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" HorizontalContentAlignment="Left" Width="130" x:Name="Button_Add" Click="Button_Add_Click" >
            <StackPanel Orientation="Horizontal" Margin="10,2">
                <Image Height="16" Width="16" Source="../Images/tile_add.png" />
                <TextBlock Text="Add New" Margin="5,0,0,0" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,41,10,0" HorizontalContentAlignment="Left" Width="130" x:Name="Button_Edit" Click="Button_Edit_Click" >
            <StackPanel Orientation="Horizontal" Margin="10,2">
                <Image Height="16" Width="16" Source="../Images/tile_edit.png" />
                <TextBlock Text="Edit Selected" Margin="5,0,0,0" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,72,10,0" HorizontalContentAlignment="Left" Width="130" x:Name="Button_Delete" Click="Button_Delete_Click" >
            <StackPanel Orientation="Horizontal" Margin="10,2">
                <Image Height="16" Width="16" Source="../Images/tile_delete.png" />
                <TextBlock Text="Delete Selected" Margin="5,0,0,0" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
