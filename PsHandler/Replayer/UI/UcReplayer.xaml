<UserControl x:Class="PsHandler.Replayer.UI.UcReplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF6C6C6C" Offset="0"/>
                <GradientStop Color="#FF343434" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Image Source="../../Images/Resources/Replayer/felt.png" Stretch="Fill"/>
        <Canvas x:Name="CanvasTable"/>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="75,0,0,0" Click="Button_Click_1"/>
    </Grid>
</UserControl>
